Import('env')

env = env.Clone()

""" Append current directory to the CPPPATH """
env.AppendUnique(CPPPATH  = [env.Dir('.').srcnode().abspath])

""" Enable exceptions """
env['ENABLE_EXCEPTIONS'] = True

""" Build static library """
env.ComponentLibrary('rightway_report', Glob('impl/*.cpp'), COMPONENT_STATIC=True)